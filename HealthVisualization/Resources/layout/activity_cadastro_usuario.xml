<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/inner_frame_layout_vertical_padding"
    android:paddingHorizontal="@dimen/inner_frame_layout_horizontal_padding">
    
    <!-- TODO: Adicionar hint para "Digite aqui o nome" nos arquivos de valores -->
    <EditText
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite aqui o nome"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextNome" />

    <!-- TODO: Adicionar hint para "Digite aqui o sobrenome" nos arquivos de valores -->
    <EditText
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite aqui o sobrenome"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextSobrenome" />

    <!-- TODO: Adicionar hint para "Digite aqui o email" nos arquivos de valores -->
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite aqui o email"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextEmail" />

    <!-- TODO: Adicionar hint para "Digite aqui a senha" nos arquivos de valores -->
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite aqui a senha"
        android:id="@+id/editTextSenha" />

    <!-- TODO: Adicionar hint para "Confirme aqui a senha" nos arquivos de valores -->
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirme aqui a senha"
        android:id="@+id/editTextConfirmarSenha" />

    <!-- TODO: Adicionar dois novos campos (alem de nome e email) de EditText -->
    <Button
        android:text="Cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCadastrar" />

</LinearLayout>